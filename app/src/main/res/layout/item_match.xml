<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:foregroundGravity="right"
    android:gravity="right"
    app:barrierDirection="right">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layoutDirection="rtl"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:layoutDirection="rtl">

            <ImageButton
                android:id="@+id/img_remove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="3dp"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_delete" />

            <ImageButton
                android:id="@+id/img_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="2dp"
                android:layout_toRightOf="@+id/img_remove"
                android:background="@android:color/transparent"
                app:srcCompat="@android:drawable/ic_input_add" />

            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/img_add"
                android:background="@drawable/style"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_zarfiat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_toRightOf="@+id/line1"
                android:text="10"
                android:textColor="@android:color/holo_red_dark" />

            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/txt_zarfiat"
                android:background="@drawable/style"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/line2"
                android:text="200,000"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:id="@+id/line3"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_toStartOf="@+id/txt_price"
                android:background="@drawable/style"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/line3"
                android:text="3/4/1398" />

            <LinearLayout
                android:id="@+id/line4"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/txt_name"
                android:background="@drawable/style"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layout_toEndOf="@+id/img_match"
                android:text="رالی1"
                android:textColor="@color/colorPrimary" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_match"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:layoutDirection="rtl" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
